@model TDList.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TDList</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/RegLog.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TDList.styles.css" asp-append-version="true" />
</head>

<div class="container">
    <h1>TDList</h1>
    <h2>Создание аккаунта</h2>
    <form class="form" method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <fieldset class="form-fieldset ui-input __first">
            <input type="text" id="username" placeholder="Логин" tabindex="0" asp-for="Login" />
            <label for="username" asp-for="Login">
                <span data-text="Username" asp-validation-for="Login">Логин</span>
            </label>
        </fieldset>

        <fieldset class="form-fieldset ui-input __second">
            <input type="email" id="email" placeholder="Email" tabindex="0" asp-for="Email" />
            <label for="email" asp-for="Email">
                <span data-text="E-mail Address" asp-validation-for="Email">E-mail адрес</span>
            </label>
        </fieldset>
        <fieldset class="form-fieldset ui-input __first">
            <input type="text" id="username" placeholder="Ваше имя" tabindex="0" asp-for="Name" />
            <label for="username" asp-for="Name">
                <span data-text="Username" asp-validation-for="Name">Ваше имя</span>
            </label>
        </fieldset>
        <fieldset class="form-fieldset ui-input __third">
            <input type="password" id="new-password" placeholder="Ваш пароль" asp-for="Password" />
            <label for="new-password" asp-for="Password">
                <span data-text="New Password" asp-validation-for="Password">Введите пароль</span>
            </label>
        </fieldset>

        <fieldset class="form-fieldset ui-input __fourth">
            <input type="password" id="repeat-new-password" placeholder="Повторите пароль" asp-for="PasswordConfirm" />
            <label for="repeat-new-password" asp-for="PasswordConfirm">
                <span data-text="Repeat New Password" asp-validation-for="PasswordConfirm">Повторите пароль</span>
            </label>
        </fieldset>

        <div class="form-footer">
            <button type="submit" class="btn">Создать</button>
        </div>
    </form>
</div>



<script src="~/js/RegLog.js" asp-append-version="true"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
