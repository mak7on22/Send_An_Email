@model TDList.ViewModels.ConfirmRegistrationViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    string statusError3 = ViewData["StatusErrorUser"] as string;
    string statusError4 = ViewData["StatusErrorCode"] as string;
}







<div class="sdsdd" style="display: flex;flex-direction: column; align-items: center;">
              <h2 style="color:white;"> @Localizer[$"Подтверждение регистрации"]</h2>
              <form method="post" asp-controller="Account" asp-action="ConfirmRegistration">
                  <div asp-validation-summary="ModelOnly"></div>
                  <input type="hidden" asp-for="Email" value="@ViewData["Email"]" />
                    <div class="form-fieldset ui-input">
                      <label asp-for="ConfirmationCode" style="color: white;">@Localizer[$"Введите код подтверждения"]</label>
                      <input asp-for="ConfirmationCode" type="number" class="form-control" />
                      <span asp-validation-for="ConfirmationCode" class="text-danger"></span>
                    </div>
                    <button type="submit" style="margin-top:10px;" class="btn btn-success">@Localizer[$"Подтвердить"]</button>
              </form>
    <div class="form-group" style="color: red;">
        @Localizer[$"{statusError3}"]
        @Localizer[$"{statusError4}"]
    </div>
</div>