@model TDList.Models.Goal
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Edit";
    string statusError = ViewData["StatusError"] as string;
    string statusErrors = ViewData["StatusErrors"] as string;
}

<h1>@Localizer["Изменить"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label nn">@Localizer["Название"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label nn">@Localizer["Исполнитель"]</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
             <div class="form-group">
                 <label class="nn" asp-for="Description">@Localizer["Описание"]</label>
                 <textarea asp-for="Description" class="form-control sdf scrollable-list "></textarea>
                 <span asp-validation-for="Description" class="text-danger"></span>
              </div>
            <div class="form-group" style="color: red;">
                @Localizer[$"{statusError}"]
                @Localizer[$"{statusErrors}"]
            </div>
            <div class="form-group opa">
                <button class="btnsgr bbgr"> <a class="agr" type="submit" value="Сохранить">@Localizer["Сохранить"]</a></button>
            </div>
        </form>
    </div>
</div>

<div class="fg">
    <button class="btnsbac bbbac"> <a class="abac" asp-action="Index">@Localizer["Назад"]</a> </button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
