@model TDList.Models.Goal
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Delete";
    string statusError = ViewData["StatusError"] as string;
}

<h1>@Localizer["Удаление"]</h1>

<h3>@Localizer["Вы действительно хотите удалить?"]</h3>
<div class="dlt">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           @Localizer[@Html.DisplayNameFor(model => model.Name)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
           @Localizer[@Html.DisplayNameFor(model => model.Description)]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Localizer[@Html.DisplayNameFor(model => model.UserName)]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <div class="form-group"style="color:red;">
            @Localizer[$"{statusError}"]
        </div>
    </dl>
    
    <form class="fg" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
       <button class="btnsdel bbdel"> <a type="submit" value="Удалить">@Localizer["Удалить"]</a> </button>
       <button class="btnsbac bbbac"> <a class="abac" asp-action="Index">@Localizer["Назад"]</a> </button>
    </form>
</div>
